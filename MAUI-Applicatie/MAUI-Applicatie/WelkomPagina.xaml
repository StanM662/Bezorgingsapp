<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MAUI_Applicatie.WelkomPagina"
             xmlns:viewmodel="clr-namespace:MAUI_Applicatie.ViewModel">

    <ScrollView>
        <VerticalStackLayout Padding="30,0" Spacing="25">

            <Image Source="zuyd_logo.png" HeightRequest="185" Aspect="AspectFit" />

            <Label Text="Welkom bij de bestelapp" Style="{StaticResource Headline}" />
            <Label Text="Deze mobiele applicatie is gemaakt door:&#10;Stan Morreau&#10;Sander Kleijnen&#10;Rick Theunisz"
                   Style="{StaticResource SubHeadline}" />

            <Frame BackgroundColor="LightGray" Padding="20" WidthRequest="200" HorizontalOptions="Center">
                <Label Text="Tap me to go to Page 1" HorizontalOptions="Center" VerticalOptions="Center" TextColor="Black" />
                <Frame.GestureRecognizers>
                    <TapGestureRecognizer
            Command="{Binding TapCommand}"
            CommandParameter="BestellingPagina" />
                </Frame.GestureRecognizers>
            </Frame>

            <Frame BackgroundColor="LightGray" Padding="20" WidthRequest="200" HorizontalOptions="Center">
                <Label Text="Tap me to go to Page 2" HorizontalOptions="Center" VerticalOptions="Center" TextColor="Black" />
                <Frame.GestureRecognizers>
                    <TapGestureRecognizer
                        Command="{Binding TapCommand}"
                        CommandParameter="LoginPagina" />  
                </Frame.GestureRecognizers>
            </Frame>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
