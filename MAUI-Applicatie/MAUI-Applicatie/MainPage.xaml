<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MAUI_Applicatie.MainPage"
             xmlns:viewmodel="clr-namespace:MAUI_Applicatie.ViewModel">

    <ScrollView>
        <VerticalStackLayout Padding="30,0" Spacing="25">

            <Image Source="zuyd_logo.png" HeightRequest="185" Aspect="AspectFit" />

            <Label Text="Welkom bij de bestelapp" Style="{StaticResource Headline}" />
            <Label Text="Deze mobiele applicatie is gemaakt door:&#10;Stan Morreau&#10;Sander Kleijnen&#10;Rick Theunisz"
                   Style="{StaticResource SubHeadline}" />

            <Button x:Name="CounterBtn" Text="Click me" Clicked="OnCounterClicked"/>
            <Button x:Name="CounterBtn2" Text="Click me 2" Clicked="Counter_Clicked"/>

            <Frame BackgroundColor="LightGray" Padding="20">
                <Label Text="Tap me to go to Page 1" HorizontalOptions="Center" VerticalOptions="Center"/>
                <Frame.GestureRecognizers>
                    <TapGestureRecognizer
                        Command="{Binding TapCommand}"
                        CommandParameter="hello" />
                </Frame.GestureRecognizers>
            </Frame>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
